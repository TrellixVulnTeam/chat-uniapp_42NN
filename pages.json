{
	"easycom": {
		"^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
	},
	
	"pages": [
		{
		    "path" : "pages/index/index",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "",
		        "enablePullDownRefresh": false
		    }
		},
		
		{
		    "path" : "pages/index/dry",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "干货",
		        "enablePullDownRefresh": false
		    }
		},
		
		{
		    "path" : "pages/index/my",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "我的",
		        "enablePullDownRefresh": false
		    }
		},
		
		{
		    "path" : "pages/login/login",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "授权登录",
		        "enablePullDownRefresh": false
		    }
		}
    ],
	
	"subPackages":[{
		"root": "pages/dry",
		"pages": [{
			"path": "article",
			"style": {
				"navigationBarTitleText": "干货",
				"enablePullDownRefresh": true
			}
		}]
	}, {
		"root": "pages/chat",
		"pages": [{
			"path": "type/type",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "search/search",
			"style": {
				"navigationBarTitleText": "聊天搜索",
				"enablePullDownRefresh": false
			}
		}]
	}, {
		"root": "pages/my",
		"pages": [{
			"path": "activation/activation",
			"style": {
				"navigationBarTitleText": "填写邀请码",
				"enablePullDownRefresh": false
			}
		},{
		    "path" : "invitation/invitation",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "邀请好友赚vip",
		        "enablePullDownRefresh": false
		    }
		    
		},{
		    "path" : "suggestion/suggestion",
		    "style" :                                                                                    
		    {
		        "navigationBarTitleText": "投诉建议",
		        "enablePullDownRefresh": false
		    }
		}]
	}],
	
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-starter",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#F8F8F8",
		"enablePullDownRefresh": false
	},
	
	"condition": {
		"list": [{
				"path": "pages/list/detail"
			}, {
				"path": "pages/list/list"
			},
			{
				"path": "pages/ucenter/login-page/index/index"
			}, {
				"path": "pages/ucenter/userinfo/userinfo"
			},
			{
				"path": "pages/ucenter/settings/settings"
			}
		],
		"current": 1
	},
	
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#30BEB8",
		"borderStyle": "black",
		"backgroundColor": "#FFFFFF",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/images/tabbar/index.png",
			"selectedIconPath": "static/images/tabbar/index_active.png",
			"text": "首页"
		}, {
			"pagePath": "pages/index/dry",
			"iconPath": "static/images/tabbar/func.png",
			"selectedIconPath": "static/images/tabbar/func_active.png",
			"text": "干货"
		}
		, {
			"pagePath": "pages/index/my",
			"iconPath": "static/images/tabbar/user.png",
			"selectedIconPath": "static/images/tabbar/user_active.png",
			"text": "我的"
		}]
	}
}
